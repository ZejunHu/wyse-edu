<div class="blog">
	<div class="blog-header">
		<div id="carouselBlogIndicators" class="carousel vert slide" data-ride="carousel">
	    <ol class="carousel-indicators carousel-indicators--round">
	      <li data-target="#carouselBlogIndicators" data-slide-to="0" class="active"></li>
	      <li data-target="#carouselBlogIndicators" data-slide-to="1"></li>
	    </ol>
			<div class="carousel-inner">
		    <div class="carousel-item active">
					<img class="d-block w-100" src="/images/blog/news-header.png" alt="First slide">
		    </div>
		    <div class="carousel-item">
					<img class="d-block w-100" src="/images/blog/news-slider-2.jpg" alt="First slide">
		    </div>
		  </div>
		  <a class="carousel-control-prev" href="#carouselBlogIndicators" role="button" data-slide="prev">
		    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
		    <span class="sr-only">Previous</span>
		  </a>
		  <a class="carousel-control-next" href="#carouselBlogIndicators" role="button" data-slide="next">
		    <span class="carousel-control-next-icon" aria-hidden="true"></span>
		    <span class="sr-only">Next</span>
		  </a>
	  </div>
	</div>

	<div class="blog-news section-padding">
		<div class="container">
			<div class="blog-news-heading">
				<div>
					<span class="blog-news-heading-name">最新资讯 | </span><a href="/blog" class="blog-news-heading-link">阅读所有内容</a>
				</div>
			</div>
			<div class="row content-padding">
				<div class="blog-news-content col-lg-12">
					<div id="carouselBlogNews" class="carousel slide" data-ride="carousel">
					  <div class="carousel-inner">
					    <div class="carousel-item active">
					      <div class="row">
									{{# each data.posts1}}
									<div data-ks-editable="{{#if ../user}}{{adminEditableUrl ../../user _id}}{{/if}}" class="col-md-4 blog-news-content-block">
										<h2 class="blog-news-content-block-heading">{{{title}}}</h2>
										<p class="blog-news-content-block-content">
												{{#if publishedDate}}{{date publishedDate}}{{/if}}
												{{#if author.name.first}}by {{author.name.first}}{{/if}}
										</p>
										<div class="blog-news-content-block-content">{{{content.brief}}}</div>
										{{#if content.extended}}
										<a href="{{postUrl slug}}" class="arrow-link">
											<span>阅读全文</span>
											<img class="arrow-link-arrow" src="/icon/arrows_right_double-red.svg" alt="">
										</a>
										{{/if}}
									</div>
									{{/each}}
					      </div>
					    </div>
					    <div class="carousel-item">
								<div class="row">
									{{# each data.posts2}}
									<div data-ks-editable="{{#if ../user}}{{adminEditableUrl ../../user _id}}{{/if}}" class="col-md-4 blog-news-content-block">
										<h2 class="blog-news-content-block-heading">{{{title}}}</h2>
										<p class="blog-news-content-block-content">
												{{#if publishedDate}}{{date publishedDate}}{{/if}}
												{{#if author.name.first}}by {{author.name.first}}{{/if}}
										</p>
										<div class="blog-news-content-block-content">{{{content.brief}}}</div>
										{{#if content.extended}}
										<a href="{{postUrl slug}}" class="arrow-link">
											<span>阅读全文</span>
											<img class="arrow-link-arrow" src="/icon/arrows_right_double-red.svg" alt="">
										</a>
										{{/if}}
									</div>
									{{/each}}
					      </div>
					    </div>
					    <div class="carousel-item">
								<div class="row">
									{{# each data.posts3}}
									<div data-ks-editable="{{#if ../user}}{{adminEditableUrl ../../user _id}}{{/if}}" class="col-md-4 blog-news-content-block">
										<h2 class="blog-news-content-block-heading">{{{title}}}</h2>
										<p class="blog-news-content-block-content">
												{{#if publishedDate}}{{date publishedDate}}{{/if}}
												{{#if author.name.first}}by {{author.name.first}}{{/if}}
										</p>
										<div class="blog-news-content-block-content">{{{content.brief}}}</div>
										{{#if content.extended}}
										<a href="{{postUrl slug}}" class="arrow-link">
											<span>阅读全文</span>
											<img class="arrow-link-arrow" src="/icon/arrows_right_double-red.svg" alt="">
										</a>
										{{/if}}
									</div>
									{{/each}}
					      </div>
					    </div>
					  </div>

					</div>
					<a class="carousel-control-prev d-none d-md-block" href="#carouselBlogNews" role="button" data-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="sr-only">Previous</span>
					</a>
					<a class="carousel-control-next d-none d-md-block" href="#carouselBlogNews" role="button" data-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="sr-only">Next</span>
					</a>

				</div>

			</div>
		</div>
	</div>

